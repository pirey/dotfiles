#!/bin/sh

remove_file () {
    if [ ! -e "$1" ]; then
        echo "File $1 doesn't exists"
    else
        rm -rf "$1"
    fi
}

echo "-> removing files..."

# TODO get file names dynamically
remove_file ~/.local/bin/fuzzy_lock.sh
remove_file ~/.vimrc
remove_file ~/.shared.plugin.vim
remove_file ~/.shared.plugin.config.vim
remove_file ~/.nvim.plugin.vim
remove_file ~/.nvim.plugin.config.vim
remove_file ~/.config.vim
remove_file ~/.agignore
remove_file ~/.aliases
remove_file ~/.ctags
remove_file ~/.gitconfig
remove_file ~/.gitignore_global
remove_file ~/.tmux.conf
# remove_file ~/.bashrc
remove_file ~/.editorconfig
remove_file ~/.config/nvim
remove_file ~/.config/i3
remove_file ~/.config/i3status
remove_file ~/.config/volumeicon
remove_file ~/.config/rofi

echo "OK files removed"
