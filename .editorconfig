; http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true


[*.{c,h}]
indent_style             = tab
tab_width                = 4

[*.coffee]
indent_style             = tab
tab_width                = 2

[*.{rest,jade,pug,yml,json,html,js,njk,elm}]
indent_size              = 2
