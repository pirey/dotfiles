#!/bin/sh

OS="unknown"
UNAMESTR=`uname`
if [ "$UNAMESTR" = "Linux" ]; then
   OS="linux"
elif [ "$UNAMESTR" = "Darwin" ]; then
   OS="mac"
fi


# installing vim-plug plugin manager for vim
if [ ! -e "$HOME/.vim/autoload/plug.vim" ]; then
    echo "installing vim-plug...\n"
    curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
        https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    echo "vim-plug installed\n"
else
    echo "vim-plug already installed\n"
fi

DOTFILES="$HOME/dotfiles"

if [ "$1" != "" ]; then
    DOTFILES=$1
fi

# TODO get all files dynamically
echo "creating symlinks...\n"
ln -sf $DOTFILES/.vimrc ~/.vimrc
ln -sf $DOTFILES/.pluginconfig.vim ~/.pluginconfig.vim
ln -sf $DOTFILES/.agignore ~/.agignore
ln -sf $DOTFILES/.aliases ~/.aliases
ln -sf $DOTFILES/.ctags ~/.ctags
ln -sf $DOTFILES/.gitconfig ~/.gitconfig
ln -sf $DOTFILES/.gitignore_global ~/.gitignore_global
ln -sf $DOTFILES/.tmux.conf ~/.tmux.conf
# ln -sf $DOTFILES/.bashrc ~/.bashrc
ln -sf $DOTFILES/.editorconfig ~/.editorconfig


VSCODE_SETTING=""
if [ "$OS" = "linux" ]; then
    VSCODE_SETTING="$HOME/.config/Code/User/settings.json"
elif [ "$OS" = "mac" ]; then
    VSCODE_SETTING="$HOME/Library/Application Support/Code/User/settings.json"
fi

rm $VSCODE_SETTING
ln -sf $DOTFILES/vscode.settings.json $VSCODE_SETTING

echo "symlinks created\n"

echo "All clear\n"

# install vim plugins
vim "+PlugInstall"
