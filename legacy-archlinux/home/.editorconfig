; http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true


[*.{c,cpp,h,go}]
indent_style             = tab
tab_width                = 4

[*.coffee]
indent_style             = tab
tab_width                = 2

[*.{hs,rb,rest,jade,pug,yml,json,html,css,re,js,jsx,ts,tsx,njk,vue}]
indent_size              = 2

[*.{elm}]
indent_size              = 4
