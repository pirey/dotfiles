; http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
trim_trailing_whitespace = true

[*.{c,cpp,h,go,odin}]
indent_style             = tab
tab_width                = 4
indent_size              = 4

[*.{elm}]
indent_size              = 4
