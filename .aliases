#!/usr/bin/env sh
alias help="man"

alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias ls-dir="ls -d */"
alias proses="ps aux | grep"

# vim
alias vim="nvim"
alias vi="nvim"
alias v="nvim"
alias vconf="cd ~/.dotfiles && vim ~/.dotfiles/.vimrc"
alias hosts="sudo vim -u NONE /etc/hosts"

# zsh
alias zconf="vim ~/.zshrc"
alias zsource="source ~/.zshrc"

# tmux
alias tmuxmain="tmux switch -t MAIN:0" # go to main session

# git
alias gst="git status"
alias gdiff="git diff"
alias gcf="vim $HOME/.gitconfig"
